/* pages/cloudPoolbuy/cloudPoolbuy.wxss */
.cloudPoolbuy-header{
  height: 300rpx;
  position: relative;
}
.cloudPoolbuy-header image{
  width: 100%;
  height: 100%;
  object-fit: cover;

}
.cloudPoolbuy-car{
  width: 750rpx;
