/* pages/personalModifyphone/personalModifyhone.wxss */
.pModifyphone-body{
  margin-left: 75rpx;
  margin-right: 75rpx;
  margin-top: 46rpx;
}
.pModifyphones{
  height: 88rpx;
  border-radius:100rpx;
}
.pModifyphones:first-child,.pModifyphones:nth-child(2){
  border:1rpx solid rgba(68,97,194,1);
}
.pModifyphones:first-child{
  margin-bottom: 32rpx;
}
.pModifyphones:nth-child(2){
  margin-bottom: 53rpx;
}
.pModifyphones:last-child{
  background:linear-gradient(113.7deg,rgba(129,210,239,1),rgba(66,94,192,1));
box-shadow:0px 4px 2px rgba(93,165,245,0.45);
text-align: center;
color: #FFFFFF;
font-size: 32rpx;
line-height: 88rpx;
}
.pModifyphones label{
  display: block;
  float: left;
  width: 90rpx;
  line-height: 88rpx;
  margin-right: 16rpx;
  margin-left: 28rpx;
  font-size: 30rpx;
  color: #4461C2;
}
.pModifyphones input{
  font-size: 24rpx;
  color: #4763C3;
  height: 88rpx;
  width: 300rpx;
  float: left;
}
.pModifyphones view{
  display: block;
  float: right;
  width: 150rpx;
  height: 88rpx;
  border-radius: 100rpx;
  background-color: rgba(129,210,239,0.1);
  font-size: 24rpx;
  text-align: center;
  line-height: 88rpx;
  color: #4461C2;
}
.psection{
  color: rgba(71,99,195,0.43);
  letter-spacing: 1rpx;
}