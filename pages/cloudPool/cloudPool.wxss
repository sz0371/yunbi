/* pages/cloudPool/cloudPool.wxss */
.cloudPool-top{
  width: 100%;
  height: 250rpx;
}
.cloudPool-top image{
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.cloudPool-card{
  width: 700rpx;
  height: 297rpx;
  position: relative;
  top: -200rpx;
  left: 50%;
  margin-left: -350rpx;
