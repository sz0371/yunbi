  margin-left: 61rpx;
  margin-right: 55rpx;
  height: 40rpx;
  position: relative;
  top: -140rpx;
}
.cloudPool-nber-boxfl{
  float: left;
  font-size:32rpx;
  font-family:PingFangSC-Semibold;
  color:rgba(90,139,210,1);
}
.cloudPool-nber-boxfr{
