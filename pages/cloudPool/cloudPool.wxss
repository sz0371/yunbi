  color:rgba(90,139,210,1);
}
.cloudPool-card-box{
  margin-left: 30rpx;
  margin-right: 17rpx;
  height: 129rpx;
  margin-top: 44rpx;
}
.cloudPool-card-boxfl{
  width: 148rpx;
